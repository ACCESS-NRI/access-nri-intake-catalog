{
    "schema": {
        "$schema": "https://json-schema.org/draft/2020-12/schema",
        "type": "object",
        "properties": {
            "subcatalog": {
                "type": "string"
            },
            "model": {
                "type": "string"
            },
            "description": {
                "type": "string"
            },
            "realm": {
                "enum": [
                    "atmos",
                    "ocean",
                    "land",
                    "ice",
                    "multi"
                ]
            },
            "frequency": {
                "type": "string",
                "pattern": "^fx$|^subhr$|^\\d+hr$|^\\d+day$|^\\d+mon$|^\\d+yr$|^\\d+dec$"
            },
            "variable": {
                "type": "array",
                "items": {
                    "type": "string"
                }
            }
        },
        "required": [
            "subcatalog",
            "model",
            "description",
            "realm",
            "frequency",
            "variable"
        ],
        "additionalProperties": false
    },
    "name_column": "subcatalog",
    "yaml_column": "yaml"
}